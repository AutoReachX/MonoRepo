# Render Database (Get these from your Render dashboard)
DATABASE_URL=postgresql://username:password@hostname:port/database_name
# Example: postgresql://autoreach_user:abc123@dpg-xxxxxxxxx-a.oregon-postgres.render.com:5432/autoreach_db

# Render Redis (Get this from your Render dashboard)
REDIS_URL=redis://username:password@hostname:port
# Example: redis://red-xxxxxxxxx:abc123@oregon-redis.render.com:6379

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=true

# Twitter API Credentials (Get from developer.twitter.com)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Email Settings (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
